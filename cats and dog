#include<iostream>
#include<cstdio>

    using namespace std;
 
    typedef long long llong;
    llong readInteger()
    {
    	char c = getchar_unlocked();
    	llong integer = 0;
    	while (c >= '0' && c <= '9')
    	{
    		integer = integer * 10 + (c - '0');
    		c = getchar_unlocked();
    	}
 
    	return integer;
    }
 
    int main()
    {
 
    	int nb_input = readInteger();
 
    	llong C, D, L;
 
    	for (int i = 0; i < nb_input; i++)
    	{
    		llong C = readInteger();
    		llong D = readInteger();
    		llong L = readInteger();
 
 
 
    		if (L % 4 != 0 || L < D * 4 || L > (D+C)*4)
    		{
    			cout << "no\n";
    		}
    		else
    		{
    			// L > (D*2  + C) * 4 ||
    			if ( C > ((L/4)-D + D*2))
    				cout << "no\n";
    			else
    				cout << "yes\n";
    		}
    	}
 
    	return 0;
    }

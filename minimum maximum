#include<bits/stdc++.h>
using namespace std;
int main()
{
    int t;
    cin>>t;
    while(t--)
    {
        long long int i,n;
        cin>>n;
        long long int a[n];
        cin>>a[0];
        long long int m=a[0];
        for(i=1;i<n;i++)
        {
            scanf("%lld",&a[i]);
            if(a[i]<m)
                m=a[i];
        }
        cout<<m*(n-1)<<"\n";
    }
    return 0;
}
